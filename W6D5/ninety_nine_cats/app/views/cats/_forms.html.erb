<% if type == :edit %>
  <% action_url = cat_url(cat) %>
  <% button_text = "Update Cat!" %>
<% elsif type == :new %>
  <% action_url = cats_url %>
  <% button_text = 'Create Cat!' %>
<% end %>

<form action=<%= action_url %> method="post">
  <% if type == 'edit' %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  
  <label>Name:
    <input type="text" name="cat[name]" value=<%= @cat.name %>>
  </label>
  <br>

  <label>Sex:
    <br>

    <label>Male
        <input type="radio" name="cat[sex]" value="M" <%= 'checked' if @cat.sex == 'M' %>> 
    </label>
    <br>

    <label>Female
        <input type="radio" name="cat[sex]" value="F" <%= 'checked' if @cat.sex == 'F' %>>
    </label>    
  </label>
  <br>

  <label>Color:
    <select name="cat[color]">
      <% if type == :new %>
        <option value="" selected disabled>-- Select a color --</option>
      <% end %>

      <% Cat::CAT_COLORS.each do |color| %>
        <option value= <%= color %> <%= 'selected' if color == @cat.color%>>
          <%= color %>
        </option>
      <% end %>
    </select>
  </label>
  <br>

  <label>Birth Date:
    <input type="date" name="cat[birth_date]" value=<%= @cat.birth_date %>>
  </label>
  <br>

  <label>Description:
    <textarea name="cat[description]"><%= @cat.description %></textarea>
  </label>
  <br>

  <input type="submit" value=<%= button_text %>>
</form>